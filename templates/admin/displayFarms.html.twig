
{% extends "main/baseAdmin.html.twig" %}

{% block title %}Liste{% endblock %}

{% block body %}

 <div class="container">
   
 
 <h1>farm list</h1>
 


  <table class="table table-striped ">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">NOM</th>
      <th scope="col">LOCATION</th>
      <th scope="col">OWNER</th>
       <th scope="col">display product</th>
       <th scope="col">detail</th>
       <th scope="col">Ban Farm </th>
       <th scope="col">delete</th>
       
      
    </tr>
  </thead>
  <tbody>
   {% for f in farms %}
    <tr>
      <th scope="row">{{f.getId() }}</th>
      <td>{{ f.getFarmName() }}</td>
      <td>{{ f.getLoacation() }}</td>
      <td>{{ f.getOwner().getUserName()}}</td>
      <td><a class="btn btn-primary " href="{{path('app_admin/farmer/products',{'id':f.getId()})}}">view products </a></td>
      <td><a class="btn btn-info ">detail</a></td>
      {% if f.getOwner().getAccount().isIsBaned() %}
      <td><a class="btn btn-warning" href="{{path('app_admin/farmer/allow',{'id':f.getId()})}}"> Baned </a></td>
        {% else %}
        <td><a class="btn btn-success " href="{{path('app_admin/farmer/ban',{'id':f.getId()})}}">Allowed </a></td>
      {% endif %}
      <td><a class="btn btn-danger " href="{{path('app_admin/deleteFarm',{'id':f.getId()})}}">delete</a></td>
     
    </tr>
     {% endfor %}

      </tbody>
</table>

</div>


{% endblock %}