
{% extends "main/baseAdmin.html.twig" %}
 {% block body %}
 
  <div class="container">
    
  
  <h1>greengrocer list</h1>
  
 
 
   <table class="table table-striped ">
   <thead>
     <tr>
       <th scope="col">ID</th>
       <th scope="col">NOM</th>
       <th scope="col">LOCATION</th>
       <th scope="col">OWNER</th>
        <th scope="col">detail</th>
        <th scope="col">Ban Farm </th>
        <th scope="col">delete</th>
        
       
     </tr>
   </thead>
   <tbody>
    {% for f in greengrocer %}
     <tr>
       <th scope="row">{{f.getId() }}</th>
       <td>{{ f.getGreenGrocerName() }}</td>
       <td>{{ f.getLocation() }}</td>
       <td>{{ f.getOwnerId().getUserName()}}</td>
       <td><a class="btn btn-info ">detail</a></td>
       {% if f.getOwnerId().getAccount().isIsBaned() %}
       <td><a class="btn btn-warning" href="{{path('app_admin/greengrocer/allow',{'id':f.getId()})}}"> Baned </a></td>
         {% else %}
         <td><a class="btn btn-success " href="{{path('app_admin/greengrocer/ban',{'id':f.getId()})}}">Allowed </a></td>
       {% endif %}
       <td><a class="btn btn-danger " href="{{path('app_admin/deleteGreenGrocer',{'id':f.getId()})}}">delete</a></td>
      
     </tr>
      {% endfor %}
 
       </tbody>
 </table>
 
 </div>
 
 
 {% endblock %}