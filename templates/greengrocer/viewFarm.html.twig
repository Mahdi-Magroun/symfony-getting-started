{% block title %}Liste{% endblock %}

{% block body %}
 <div class="container">
   
  
 <h1>Liste de tous les produits</h1>
 


  <table class="table table-striped ">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">NOM</th>
      <th scope="col">LOCATION</th>
      <th scope="col">OWNER</th>
       <th scope="col">Actions</th>
      
    </tr>
  </thead>
  <tbody>
   {% for f in farms %}
    <tr>
      <th scope="row">{{f.getId() }}</th>
      <td>{{ f.getFarmName() }}</td>
      <td>{{ f.getLoacation() }}</td>
      <td>{{ f.getOwner().getUserName()}}</td>
      <td><a class="btn btn-primary" href="{{ path("greengrocer/farms/products" ,{'idFarm':f.getId()} ) }}">view products </a></td>
    </tr>
     {% endfor %}

      </tbody>
</table>

</div>


{% endblock %}