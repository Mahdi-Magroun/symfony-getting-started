{% extends "main/baseFarmer.html.twig" %}

{% block body %}

<div class="container ">
    <div class="row m-4">
<div class="alert alert-success w-25 row m-2" role="alert">
    <h4 class="alert-heading">Benifits!</h4>
    <p>you have made : {{data.benifits}} dt</p>
    <hr>
    
  </div>

  <div class="alert alert-info w-25 row m-4" role="alert">
    <h4 class="alert-heading">Totale order </h4>
    <p> there is {{data.order.totale}} order</p>
    <hr>
    
  </div>

  <div class="alert alert-warning w-25 row m-4" role="alert">
    <h4 class="alert-heading">order not prepared </h4>
    <p>you have {{data.order.notPrepared}} order not prepared </p>
    <hr>
</div>
  </div>
  
  <div class="alert alert-info w-25 row m-4" role="alert">
    <h4 class="alert-heading">Totale products </h4>
    <p> there is {{data.products}} product </p>
    <hr>
    
  </div>
  
  
</div>
  </div>

  <div class="w-75 border border-primary col m-5">
    <h2  class="font-monospace"> order </h2>
    <div class="w-100">
      <p  class="font-monospace">delivered</p>
    <div class="progress">
    
      <div class="progress-bar bg-success" role="progressbar" style="width:{{ data.order.delivred * 100 / data.order.totale }}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">{{data.order.delivred * 100 / data.order.totale}}%</div> 
    </div>
   
    <p  class="font-monospace">not deliverd</p>
    <div class="progress">
        <div class="progress-bar bg-warning" role="progressbar" style="width: {{data.order.notDelivered * 100 / data.order.totale}}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">{{data.order.notDelivered * 100 / data.order.totale}}%</div> 
    </div>
   
   
   <p  class="font-monospace"> prepared and not delivered </p>
    <div class="progress">
        <div class="progress-bar bg-info" role="progressbar" style="width: {{data.order.preparedNotDelivered * 100 / data.order.totale}}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">{{data.order.preparedNotDelivered * 100 / data.order.totale}}%</div> 
    </div>
  
   <p  class="font-monospace"> not prepared   </p>
    <div class="progress">
        <div class="progress-bar bg-danger" role="progressbar" style="width: {{data.order.notPrepared * 100 / data.order.totale}}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">{{data.order.notPrepared * 100 / data.order.totale}}%</div> 
    </div>
    
  </div>

{% endblock body %}